<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.cryptoapp">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher_btc"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_btc_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".presentation.CoinDetailInfoActivity"
            android:exported="false" />
        <activity
            android:name=".presentation.AppSettingsActivity"
            android:exported="false" />
        <activity android:name=".presentation.CoinDetailFragment" />
        <activity
            android:name=".presentation.CoinPriceListActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>